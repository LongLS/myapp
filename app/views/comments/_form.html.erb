<%= form_for([@post, @post.comments.build]) do |f| %>
    <p>
        <%= f.label :email %><br>
        <%= f.text_area :email%>
    </p>

    <p>
        <%= f.label :name %><br>
        <%= f.text_area :name%>
    </p>
    <br>
    <p>
        <%= f.label :content %><br>
        <%= f.text_area :content%>
    </p>

    <p>
        <%= f.submit%>
    </p>
<% end %>
