<!DOCTYPE html>

<head>
    <title>Page Post news</title>
</head>

<h1>Add Posts</h1>
<%= form_for :post, url: posts_path do |f| %>
<p>
<%= f.label :title %><br/>
<%= f.text_field :title %><br/>
</p>
<p>
<%= f.label :content %><br/>
<%= f.text_area :content %><br/>
</p>

<%= f.label :image %><br/>
<%= f.file_field :image %><br/>
</p>

<p>
<%= f.label :publish %><br/>
<%= f.text_area :publish %><br/>
</p>

</p>
<%= f.submit %>
<% end %>